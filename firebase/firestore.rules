rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isSpaceMember(spaceId) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/spaces/$(spaceId)/members/$(request.auth.uid));
    }

    function canReadSpace(spaceId) {
      return isSignedIn() && (
        resource.data.ownerId == request.auth.uid ||
        isSpaceMember(spaceId)
      );
    }

    function hasSpaceAccessById(spaceId) {
      return isSignedIn() && (
        get(/databases/$(database)/documents/spaces/$(spaceId)).data.ownerId == request.auth.uid ||
        isSpaceMember(spaceId)
      );
    }

    function listSpaceId(listId) {
      return get(/databases/$(database)/documents/lists/$(listId)).data.spaceId;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false;
    }

    match /spaces/{spaceId} {
      allow read: if canReadSpace(spaceId);
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /spaces/{spaceId}/members/{memberId} {
      allow read: if isSignedIn() && (
        request.auth.uid == memberId ||
        get(/databases/$(database)/documents/spaces/$(spaceId)).data.ownerId == request.auth.uid
      );
      allow create, update, delete: if isSignedIn() &&
        get(/databases/$(database)/documents/spaces/$(spaceId)).data.ownerId == request.auth.uid;
    }

    match /lists/{listId} {
      allow read, update, delete: if hasSpaceAccessById(resource.data.spaceId);
      allow create: if isSignedIn() && hasSpaceAccessById(request.resource.data.spaceId);
    }

    match /lists/{listId}/items/{itemId} {
      allow read, create, update, delete: if hasSpaceAccessById(listSpaceId(listId));
    }
  }
}