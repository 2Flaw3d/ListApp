rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isSpaceMember(spaceId) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/spaces/$(spaceId)/members/$(request.auth.uid));
    }

    function isSpaceOwner(spaceId) {
      return isSignedIn() &&
        get(/databases/$(database)/documents/spaces/$(spaceId)).data.ownerId == request.auth.uid;
    }

    function listSpaceId(listId) {
      return get(/databases/$(database)/documents/lists/$(listId)).data.spaceId;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false;
    }

    match /spaces/{spaceId} {
      allow read: if isSpaceMember(spaceId);
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSpaceOwner(spaceId);
    }

    match /spaces/{spaceId}/members/{memberId} {
      allow read: if isSpaceMember(spaceId);
      allow create, update, delete: if isSpaceOwner(spaceId);
    }

    match /lists/{listId} {
      allow read: if isSpaceMember(resource.data.spaceId);
      allow create: if isSignedIn() && isSpaceMember(request.resource.data.spaceId);
      allow update, delete: if isSpaceMember(resource.data.spaceId);
    }

    match /lists/{listId}/items/{itemId} {
      allow read, create, update, delete: if isSpaceMember(listSpaceId(listId));
    }
  }
}
